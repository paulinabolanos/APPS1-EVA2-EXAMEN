<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resbc"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="321dp"
        android:layout_height="309dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/res" />

    <Button
        android:id="@+id/btnVerRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_redondo"
        android:onClick="onClickMostrar"
        android:text="VER RESTAURANTES"
        android:textAllCaps="false"
        android:textColor="#DAF0F1EE"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_redondo"
        android:onClick="onClickRegistrar"
        android:text="REGISTRAR RESTAURANTE"
        android:textAllCaps="false"
        android:textColor="#DAF0F1EE"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>